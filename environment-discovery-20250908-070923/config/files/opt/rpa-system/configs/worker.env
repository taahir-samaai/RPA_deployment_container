# Worker Configuration - t3.medium optimized
WORKER_HOST=0.0.0.0
WORKER_PORT=8621

# Multi-threading configuration for optimal performance
MAX_WORKERS=2
CONCURRENT_JOBS=2
WORKER_TIMEOUT=600
THREAD_POOL_SIZE=4

# Chrome/Browser settings
HEADLESS=true
NO_SANDBOX=true
DISABLE_DEV_SHM_USAGE=true
CHROMEDRIVER_PATH=/usr/bin/chromedriver

# Security
AUTHORIZED_WORKER_IPS=["172.18.0.0/16","127.0.0.1"]

# Storage
BASE_DATA_DIR=/app/data
SCREENSHOT_RETENTION_DAYS=7

# Logging
LOG_LEVEL=INFO

# Memory optimization for t3.medium
CHROME_MEMORY_LIMIT=512m
